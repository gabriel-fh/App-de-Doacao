{
  "cli": {
    "version": ">= 5.4.0"
  },
  "build": {
    "base": {
      "node": "20.15.1",
      "android": {
        "image": "latest",
        "env": {
          "PLATFORM": "android"
        }
      },
      "channel": "base"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "android": {
        "distribution": "internal",
        "withoutCredentials": true
      },
      "channel": "development"
    },
    "staging": {
      "extends": "base",
      "env": {
        "ENVIRONMENT": "staging"
      },
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "channel": "staging"
    },
    "production": {
      "extends": "base",
      "env": {
        "ENVIRONMENT": "production"
      },
      "android": {
        "buildType": "apk"
      },
      "channel": "production"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "env": {
          "PLATFORM": "android"
        }
      },
      "channel": "preview"
    }
  },
  "submit": {
    "production": {}
  }
}
